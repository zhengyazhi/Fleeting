<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/left_alarm_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/icon_bg"
            android:src="@drawable/ic_keyboard_backspace_white_24dp" />

        <EditText
            android:id="@+id/detail_alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="65dp"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/detail_ok"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:text="确定" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="26dp"
                android:background="@drawable/ic_notifications_grey_600_24dp" />

            <TextView
                android:id="@+id/detail_alarm_remind"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="选择提醒时间"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="26dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_extension_grey_600_24dp"/>

            <TextView
                android:id="@+id/detail_add_color"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="紧急程度"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="26dp"
                android:background="@drawable/ic_location_on_grey_600_24dp" />

            <TextView
                android:id="@+id/detail_alarm_local"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="北京"
                android:textColor="#000" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_add_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/detail_alarm_description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="26dp"
                android:lines="5"
                android:background="@null"
                android:hint="添加备注"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_delete_white_24dp"
            app:elevation="8dp"/>
    </LinearLayout>

</LinearLayout>
